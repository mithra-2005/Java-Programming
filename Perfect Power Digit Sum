import java.util.*;

public class Solution {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int original = n;

        // Step 1: Count number of digits
        int temp = n;
        int digits = 0;
        while (temp > 0) {
            digits++;
            temp = temp / 10;
        }

        // Step 2: Calculate sum
        temp = n;
        int sum = 0;

        while (temp > 0) {
            int digit = temp / (int)Math.pow(10, digits - 1);  // leftmost digit
            sum += Math.pow(digit, (original + "").length() - digits + 1);

            temp = temp % (int)Math.pow(10, digits - 1);  // remove leftmost digit
            digits--;
        }

        // Step 3: Check Disarium
        if (sum == original)
            System.out.println("Yes");
        else
            System.out.println("No");
    }
}

